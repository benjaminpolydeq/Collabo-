# Collabo Application - Configuration Environment Variables
# Copiez ce fichier en .env et remplissez vos valeurs

# ====================================
# API Configuration
# ====================================

# Clé API OpenAI pour l'analyse IA
# Obtenir une clé sur: https://platform.openai.com/account/api-keys
# L'application fonctionne sans cette clé (mode mock)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ====================================
# Application Settings
# ====================================

# Nom de l'application
APP_NAME=Collabo

# Version
APP_VERSION=1.0.0

# Environnement (development, production, testing)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# ====================================
# Security Settings
# ====================================

# Activer le chiffrement (true/false)
ENCRYPTION_ENABLED=true

# Type de chiffrement (AES-256, AES-128)
ENCRYPTION_TYPE=AES-256

# ====================================
# Storage Settings
# ====================================

# Répertoire de stockage des données
DATA_DIR=./data

# Activer la sauvegarde automatique (true/false)
AUTO_BACKUP=true

# Intervalle de sauvegarde en heures
BACKUP_INTERVAL=24

# ====================================
# AI Settings
# ====================================

# Modèle GPT à utiliser (ex: gpt-4, gpt-3.5-turbo)
AI_MODEL=gpt-4

# Tokens maximum par requête
AI_MAX_TOKENS=2000

# Activer l'analyse IA (true/false)
AI_ANALYSIS_ENABLED=true

# ====================================
# Notification Settings
# ====================================

# Activer les notifications (true/false)
NOTIFICATIONS_ENABLED=true

# Minutes avant le RDV pour le rappel
NOTIFICATION_REMINDER_TIME=30

# ====================================
# Streamlit Configuration
# ====================================

# Port du serveur Streamlit
STREAMLIT_SERVER_PORT=8501

# Adresse du serveur
STREAMLIT_SERVER_ADDRESS=localhost

# Thème (light/dark)
STREAMLIT_THEME=light

# ====================================
# Logging
# ====================================

# Niveau de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Fichier de log
LOG_FILE=./data/collabo.log

# ====================================
# Features Flags
# ====================================

# Activer le support audio (true/false)
FEATURE_AUDIO=false

# Activer l'export (true/false)
FEATURE_EXPORT=true

# Activer les analytics (true/false)
FEATURE_ANALYTICS=true

# ====================================
# Development Settings (dev uniquement)
# ====================================

# Hot reload (true/false)
HOT_RELOAD=true

# Afficher les erreurs détaillées (true/false)
SHOW_ERRORS=true

# Mode verbose (true/false)
VERBOSE=false
